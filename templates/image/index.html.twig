{% extends 'base.html.twig' %}

{% block title %}Images
{% endblock %}

{% block body %}
	<h1>Images</h1>

	<table class="table">
		<thead>
			<tr>
				{# <th>Id</th> #}
				<th>Nom</th>
				<th>Image</th>
				<th>Actions</th>
			</tr>
		</thead>
		<tbody>
			{% for image in images %}
				<tr>
					{# <td>{{ image.id }}</td> #}
					<td>{{ image.nom }}</td>
					{% if image.image is not null %}
						<td>
							<a href="http:{{ asset('uploads/images/' ~ image.image) }}" target="_blank" rel="noopener noreferrer"><img src="{{ asset('uploads/images/' ~ image.image) }}" alt="{{ image.nom }}" style="width: 100px; height: auto;"></a>
						</td>
					{% else %}
						<tr>
							<td colspan="4">Aucune image trouvé</td>
						</tr>
					{% endif %}
					<td>
						<a class="btn btn-outline-dark btn-primary mb-3" href="{{ path('app_image_show', {'id': image.id}) }}">Voir</a>
						<a class="btn btn-outline-dark btn-primary mb-3" href="{{ path('app_image_edit', {'id': image.id}) }}">Modifier</a>
					</td>
				</tr>
            
			{% endfor %}
		</tbody>
	</table>
	<a class="btn btn-outline-dark btn-primary mb-3" href="{{ path('app_dossier_medical_index') }}">Retour à la liste</a>
	{# <a class="btn btn-outline-dark btn-primary mb-3" href="{{ path('app_image_new', {'id': dossier_medical.id}) }}">Ajouter une image</a> #}
	{# <a class="btn btn-outline-dark btn-primary mb-3" href="{{ path('app_home') }}">Retour à l'accueil</a> #}
{% endblock %}
